body{
	overflow-x:hidden;
}
.education{
	.item{
		color:#fff;
		width:100%;
		height:100%;
		overflow:hidden;

		h2{
			font-size:38px;
			margin:0;
		}
		p{
			font-size:14px;
			padding:20px;
			line-height:30px;
		}
		.substance{
			width:710px;

		}
	}
	.item1{
		position:relative;
		background:url("../images/wisdom.jpg") no-repeat left top;
