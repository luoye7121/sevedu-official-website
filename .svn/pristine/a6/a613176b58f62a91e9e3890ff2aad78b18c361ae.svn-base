.dot{ 
	position:fixed;
	right:30px;
	top:45%;
	ul{
		list-style:none;
		outline:none;
	}
	ul li{
		border:1px solid #fff;
		border-radius:50%;
		width:13px;
		height:13px;
		margin-top:10px;
		background:transparent;
	}
	.dot-one{
		background:#fff;
	}
}