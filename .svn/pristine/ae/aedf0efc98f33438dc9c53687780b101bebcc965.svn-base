body{
	overflow-x:hidden;
}
html,body{
	height:100%;
	background:url("../images/bg.png") no-repeat center center;
	background-size:cover;
}
.index-surface{
	position:relattive;
	width:100%;
}
.surface{
	background:url("../images/bg.png") no-repeat left top;
	background-size:cover;
	width:100%;
	height:100%;
	position:absolute;
	left:0;
	top:0;
	bottom:0;
	right:0;
	margin:auto;
	.surface-detail{
		padding-top:28%;
		color:#fff;
		width:200px;
		margin:auto;
		height:132px;
		right:0;
		position: absolute;
		text-align: center;
		margin: auto;
		left: 0;
		top: 0;
		bottom: 0;
		right: 0;
		z-index:7;
		.company-name{
		font-size:26px;
	}
	p{
		font-size:22px;
	}
	}
	.rotate{
		position:relative;
		z-index:5;
		width:100%;
		height:100%;
		overflow:hidden;
		background:url("../images/bg.png") no-repeat center center;
		background-size:cover;
		img{
				position:fixed;
				// left:0;
				// right:0;
				// bottom:0;
				// top:0;
				// margin:auto;
				left:50%;
				top:50%;
				margin-left:-720px;
				margin-top:-190px!important;
				z-index:6;
				margin-top:15%;
		}
	}
}
.items{
	width:100%;
	height:100%;
	.item{
		position:relative;
		float:left;
		width:25%;
		border-right:1px solid #FFF;
		height:100%;
		cursor:pointer;
		color:#fff;
		&:hover{
			background:rgba(255,255,255,.2);
		}
		.item-content{
		width:295px;
		margin-top:48px;
		margin-right:auto;
		margin-left:auto;

		h2{
			font-size:30px;
			text-align: center;
			border-bottom:1px solid #fff;
			height:65px;
			line-height: 65px;
			margin-top: 75px;
		}
		h3{
			font-size:20px;
			text-align: center;
		}
		p{
			font-size:14px;
			text-align: left;
		}
		span{
			position:absolute;
			right:95px;
			top:375px;
			display:inline-block;
			height:53px;
			width:53px;
			border:1px solid #fff;
			border-radius:50%;
			font-size:30px;
			line-height:53px;
		}
		}
	}
	.item-two{
		padding-top:43px;
	}
	.item-four{
		border:none;
		// width:468px;
		cursor:pointer;
		&:hover{
					background:rgba(255,255,255,.2);
				}
	}
}
.link{
	// display:inline-block;
	width:100%;
	height:100%;
	position:absolute;
	left:0;
	top:0;
	z-index:6;
}