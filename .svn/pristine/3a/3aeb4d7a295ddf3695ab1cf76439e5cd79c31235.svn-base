.index-content{
	position: fixed;
	top: 0;
}
.index-side{
	background:#333333;
	height:100%;
	position:fixed;
	z-index:2;
	left:-270px;
    width:270px;
	font-family: 'FontAwesome';
	header {
		position:relative;
		width:408px;
		overflow:hidden;
		ol{
			padding-left:0;
			width:270px;
		li{
		outline-style:none;
		a{
			color:#fff;
			text-decoration:none;
			color:#fff;
			font-size:14px;
			padding-left: 36px;
			display: block;
			padding: 10px 15px 10px 30px;
			i{
				font-size:16px;
				text-align:left;
				padding-right:28px;
			}
		}
		&:hover{
			background:linear-gradient(bottom right, #1551aa , #1b85aa);
		}
		.index-sub-nav{
			background:#333;
			height:0;
			overflow:hidden;
			li{
				position: relative;
			}
			a{
				padding-left:66px;
				
				span{
					display:inline-block;
					height:7px;
					width:7px;
					border:1px solid #fff;
					border-radius:50%;
					position:absolute;
					right:21px;
					top:14px;
				}
			}
			}
		}
		}
		.index-logo{
			height:68px;
			&:hover{
				background:none;
			}
			a{
				padding:0;
				height:68px;
				line-height: 68px;
				img{
					height: 68px;
					width:270px;
				}
			}
		}
		.nav-close{
			position:absolute;
			left:365px;
			top:110px;
			cursor:pointer;
			display:none;
			.long-string{
				float:left;
				display:inline-block;
			}
			.long-arrow{
				float:left;
				// margin-left:10px;
				position:absolute;
				display:inline-block;
				left:10px;
			}
		}
	}
	.index-sub-nav{
		// display:none;
		
	}
}
